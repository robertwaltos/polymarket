# Polymarket Agent - .env.example
# Execution venue: polymarket | kalshi
EXECUTION_VENUE=polymarket

# Polymarket-only (execution_venue=polymarket)
# Polygon RPC endpoints: https://docs.polygon.technology/pos/reference/rpc-endpoints/
POLYGON_RPC_URL=
# Private key for EOA (Polygon). Use PRIVATE_KEY or POLYGON_PRIVATE_KEY.
PRIVATE_KEY=
# Anthropic API key: https://docs.anthropic.com/en/api/getting-started
ANTHROPIC_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_VERSION=2023-06-01
ANTHROPIC_MAX_TOKENS=512
# Input-token controls (avoid 429 rate limits)
ANTHROPIC_PROMPT_MAX_CHARS=4000
ANTHROPIC_MAX_MARKETS_PER_CYCLE=12
ANTHROPIC_RATE_LIMIT_COOLDOWN_SECS=60
ANTHROPIC_INPUT_TOKENS_PER_MINUTE=5000
# Weather station fast-path (bypass Claude when threshold market is parseable)
WEATHER_FAST_PATH=true
WEATHER_STATION_WEIGHT=0.70
WEATHER_STATION_SCALE_F=4.0
# Polymarket CLOB API credentials: https://docs.polymarket.com/developers/CLOB/authentication
CLOB_API_KEY=
CLOB_API_SECRET=
CLOB_API_PASSPHRASE=

# Core behavior
SHADOW_MODE=true
SHADOW_BALANCE_OVERRIDE=50
BANKROLL=50
LOOP_INTERVAL_SECS=600
MARKET_FETCH_LIMIT=1000
LIMIT_PRICE_OFFSET_BPS=0

# CLOB order config (optional overrides)
# Exchange address (CTF exchange) - default in config
CLOB_EXCHANGE_ADDRESS=0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E
CLOB_SIGNATURE_TYPE=0
CLOB_TAKER_ADDRESS=0x0000000000000000000000000000000000000000
CLOB_FEE_RATE_BPS=0
CLOB_NONCE=0
CLOB_EXPIRATION_SECS=3600
CLOB_ORDER_TYPE=GTC
CLOB_POST_ONLY=true
CLOB_TICK_SIZE=0.01
CLOB_NEG_RISK=false
# Optional funder address
CLOB_FUNDER=

# Optional data APIs
# Dune: https://docs.dune.com/api-reference/overview/authentication
DUNE_API_KEY=
DUNE_QUERY_IDS=
# Moralis: https://api-help.moralis.io/en/articles/19180-where-are-my-api-keys
MORALIS_API_KEY=
# X (Twitter) API: https://docs.x.com/fundamentals/authentication/oauth-2-0/overview
X_BEARER_TOKEN=
# NewsAPI: https://newsapi.org/docs/authentication
NEWS_API_KEY=
# NOAA Weather API (no key): https://noaa-mirror.org/www.weather.gov/documentation/services-web-api
NOAA_ENDPOINT=
# Rotowire RSS (no key)
ROTOWIRE_RSS=
# ESPN injuries page (no key)
ESPN_INJURIES_URL=

# Prediction markets / sports odds
# Betfair: https://support.developer.betfair.com/hc/en-us/articles/115003864651-How-do-I-get-started
BETFAIR_APP_KEY=
BETFAIR_SESSION=
BETFAIR_EVENT_TYPE_IDS=1
# Kalshi (execution_venue=kalshi): https://docs.kalshi.com/getting_started/api_keys
KALSHI_KEY_ID=
# Private key in PEM (can be base64-encoded to keep single line)
KALSHI_PRIVATE_KEY=
KALSHI_BASE_URL=https://api.elections.kalshi.com
KALSHI_POST_ONLY=false
KALSHI_TIME_IN_FORCE=good_till_canceled
# Smarkets API docs: https://github.com/smarkets/smk_api_docs
SMARKETS_SESSION=
# IBKR Client Portal API: https://www.interactivebrokers.com/campus/ibkr-api-page/cpapi-v1/
IBKR_API_KEY=
# The Odds API: https://the-odds-api.com/liveapi/guides/v4/index.html
ODDS_API_KEY=
ODDS_API_SPORT=basketball_nba
# CFTC COT public data: https://www.cftc.gov/MarketReports/CommitmentsofTraders/index.htm
CFTC_URL=
# Robinhood Predicts (no public API, optional custom source)
ROBINHOOD_PREDICTS_URL=

# Augur
# Augur docs: https://v1-docs.augur.net/
AUGUR_RPC_URL=
AUGUR_CONTRACT=
AUGUR_MARKETS_URL=

# Local politics (Texas)
LOCAL_POLLS_URL=
TEXAS_TRIBUNE_POLLS_URL=

# Additional optional toggles
ENABLE_GUI=false
EXPLORATION_EPSILON=0.0
EXPLORATION_FRACTION=0.01
ENABLE_RL=false
RL_EPSILON=0.2
RL_ALPHA=0.1
RL_GAMMA=0.9
ENABLE_PQ_SIGNING=false
ENABLE_FEDERATED=false
# Federated RL sync (signed snapshots + secure aggregation)
FEDERATED_CLUSTER_ID=default-cluster
FEDERATED_PEER_ID=
FEDERATED_SHARED_KEY=
FEDERATED_SYNC_DIR=.federated_sync
FEDERATED_MIN_PEER_UPDATES=1
FEDERATED_MAX_SNAPSHOT_AGE_SECS=3600
FEDERATED_SECURE_AGGREGATION=true
FEDERATED_LOCAL_BLEND=0.35
# EV-prioritized scanner scheduling
ENABLE_EV_SCHEDULER=true
SCHEDULER_CYCLE_TOKEN_BUDGET=5000
SCHEDULER_EV_FLOOR=0.01
SCHEDULER_MAX_CANDIDATES=48
SCHEDULER_URGENT_WINDOW_HOURS=48
SCHEDULER_TIMEZONE_OFFSET_HOURS=0
ENABLE_ARB_BRIDGE=false
ARBITRUM_RPC_URL=
ARBITRUM_CHAIN_ID=42161
ENABLE_SELF_AUDIT=false
SELF_AUDIT_THRESHOLD=500.0
SELF_AUDIT_PATH=
RL_OFFLINE_TRAIN=false
RL_OFFLINE_MARKET_LIMIT=1000
RL_OFFLINE_EPISODES=5000
RL_OFFLINE_EPSILON_START=0.3
RL_OFFLINE_EPSILON_DECAY=0.995
RL_REPLAY_BUFFER=10000
RL_FINETUNE_INTERVAL=100
RL_LR_SLOW=0.001
RL_LR_FAST=0.01
