# Execution controls
EXECUTION_MODE=paper
LIVE_TRADING_ENABLED=false
SHADOW_READS_ENABLED=true
LIVE_GUARD_REQUIRE_HEALTHY=true
LIVE_GUARD_HEALTH_MAX_AGE_SECS=45
LIVE_GUARD_HEALTH_POLL_SECS=10
LIVE_GUARD_FAILURE_THRESHOLD=3
LIVE_GUARD_COOLDOWN_SECS=120
LIVE_GUARD_DISABLED_VENUES=
SIM_STARTING_CASH_USD=50000
SIM_FEE_BPS=2.0
OMS_AUDIT_LOG_PATH=var/oms_audit.jsonl
OMS_AUDIT_DIR=var/oms_audit

# API server
SERVER_ADDR=127.0.0.1:8080
# Either set API_KEY (+ optional API_USER_ID/API_ROLE)
API_KEY=replace-me
API_ROLE=admin
API_ORG_ID=00000000-0000-0000-0000-000000000000
# Or set API_KEYS for multi-user auth:
# API_KEYS=tokenA:user_uuid:org_uuid:admin:ops,tokenB:user_uuid:org_uuid:trader:desk
# JWT auth (optional HS256)
JWT_SECRET=
JWT_ACCESS_TTL_SECS=900
JWT_REFRESH_TTL_SECS=2592000
ORG_RATE_LIMIT_PER_MIN=600
PASSWORD_RESET_TOKEN_TTL_SECS=3600
STREAM_EVENT_BUFFER=512

# Social intel scanner + self-improvement inputs
X_API_BEARER_TOKEN=
SOCIAL_INTEL_QUERIES=multi agent trading,autonomous trading agent,LLM trading bot live
SOCIAL_INTEL_MAX_CLAIMS=8000

# Strategy orchestrator (promotion/kill policy)
ORCH_TOTAL_CAPITAL_USD=100000
ORCH_STARTING_ALLOCATION_USD=5000
ORCH_MAX_ALLOCATION_USD=40000
ORCH_PROMOTE_MULTIPLIER=1.25
ORCH_PROMOTE_TOP_N=2
ORCH_KILL_BOTTOM_N=1
ORCH_MIN_TRADES=20
ORCH_KILL_DRAWDOWN_PCT=25
ORCH_KILL_SCORE_THRESHOLD=-20

# Automatic scanner/orchestrator loop
AUTO_IMPROVE_ENABLED=false
AUTO_IMPROVE_INTERVAL_SECS=900
AUTO_IMPROVE_LOOKBACK_DAYS=4
AUTO_IMPROVE_MAX_PER_QUERY=20
AUTO_IMPROVE_USE_INTEL_SIGNALS=true

# Postgres (optional but recommended for org/user/api-key/order ledger)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/trading_platform
DB_MAX_CONNECTIONS=5
DB_BOOTSTRAP_ORG_NAME=default-org
DB_BOOTSTRAP_ADMIN_EMAIL=admin@localhost
DB_BOOTSTRAP_ADMIN_PASSWORD=
DB_BOOTSTRAP_API_KEY=
DB_BOOTSTRAP_API_KEY_LABEL=bootstrap-admin

# Kalshi
KALSHI_BASE_URL=https://trading-api.kalshi.com
KALSHI_API_KEY_ID=
KALSHI_RSA_PRIVATE_KEY=

# IBKR
IBKR_BASE_URL=https://localhost:5000
IBKR_ACCOUNT_ID=
IBKR_SESSION_TOKEN=

# Coinbase
COINBASE_BASE_URL=https://api.coinbase.com
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_API_PASSPHRASE=

# Demo CLI order defaults
DEMO_VENUE=coinbase
